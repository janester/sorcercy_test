%h1 Sessions#new
%p Find me in app/views/sessions/new.html.haml

= form_tag login_path do
  = label_tag :username
  = text_field_tag :username
  = label_tag :password
  = password_field_tag :password
  = check_box_tag :remember_me, 1, params[:remember_me]
  = label_tag :remember_me
  = submit_tag "Log In"